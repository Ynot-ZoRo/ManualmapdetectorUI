<Window x:Class="ManualMapDetectorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manual Map Detector - Dark Mode" Height="600" Width="900"
        Background="#111">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Button x:Name="ScanBtn" Content="Scan" Width="120" Margin="0 0 10 0" Padding="10"/>
            <Button x:Name="ExportBtn" Content="Export CSV" Width="120" Padding="10"/>
        </StackPanel>

        <DataGrid x:Name="ResultsGrid" Grid.Row="1" Background="#222" Foreground="White"
                  AutoGenerateColumns="True"/>
    </Grid>
</Window>
